<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Up4It.ViewModels"
             x:Class="Up4It.Pages.CreateEventPage"
             x:DataType="vm:CreateEventViewModel"
             Title="Create Event">
    
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            
            <!-- Title -->
            <Label Text="Event Title" FontAttributes="Bold" />
            <Entry Text="{Binding Title}" 
                   Placeholder="e.g., Pizza Night"
                   ReturnType="Next"/>

            <!-- Description -->
            <Label Text="Description (Optional)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Editor Text="{Binding Description}"
                    Placeholder="Add details about your event"
                    HeightRequest="100"/>

            <!-- Location -->
            <Label Text="Location (Optional)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Entry Text="{Binding Location}"
                   Placeholder="e.g., Lou Malnati's"
                   ReturnType="Next"/>

            <!-- Start Time -->
            <Label Text="Start Time" FontAttributes="Bold" Margin="0,10,0,0"/>
            <HorizontalStackLayout Spacing="10">
                <DatePicker Date="{Binding StartTime, Mode=TwoWay}"
                            Format="MM/dd/yyyy"
                            HorizontalOptions="FillAndExpand"/>
                <TimePicker Time="{Binding StartTime, Mode=TwoWay, Converter={StaticResource TimeOnlyConverter}}"
                            HorizontalOptions="FillAndExpand"/>
            </HorizontalStackLayout>

            <!-- Max Attendees -->
            <Label Text="Max Attendees (Optional)" FontAttributes="Bold" Margin="0,10,0,0"/>
            <Entry Text="{Binding MaxAttendees}"
                   Placeholder="Leave empty for unlimited"
                   Keyboard="Numeric"
                   ReturnType="Done"/>

            <!-- Error Message -->
            <Label Text="{Binding ErrorMessage}"
                   TextColor="Red"
                   IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"
                   Margin="0,10,0,0"/>

            <!-- Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="10" Margin="0,20,0,0">
                <Button Text="Cancel"
                        Command="{Binding CancelCommand}"
                        Grid.Column="0"
                        BackgroundColor="Gray"/>
                
                <Button Text="Create Event"
                        Command="{Binding CreateEventCommand}"
                        IsEnabled="{Binding IsCreating, Converter={StaticResource InvertedBoolConverter}}"
                        Grid.Column="1"
                        BackgroundColor="{StaticResource Primary}"/>
            </Grid>

            <!-- Loading Indicator -->
            <ActivityIndicator IsRunning="{Binding IsCreating}"
                               IsVisible="{Binding IsCreating}"
                               HorizontalOptions="Center"
                               Margin="0,10,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
